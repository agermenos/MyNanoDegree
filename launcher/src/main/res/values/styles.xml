<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTitle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >9pt</item>
    </style>

    <style name="CustomButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">normal</item>
        <item name="android:shadowDx">2.2</item>
        <item name="android:shadowDy">2.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >7pt</item>
        <item name="android:width">200dp</item>
    </style>

    <style name="CustomGreenButton" parent="CustomButtons">

        <item name="android:textColor" >@color/cream</item>
        <item name="android:background">@color/darkgreen</item>
        <item name="android:shadowColor" >@color/darkgreen</item>
    </style>
    <style name="CustomOrangeButton" parent="CustomButtons">
        <item name="android:textColor" >@color/cream</item>
        <item name="android:background">@color/darkorange</item>
        <item name="android:shadowColor" >@color/darkorange</item>
    </style>
</resources>